
{% block body %}
<div class="col-12 d-flex justify-content-center">
    <div class="col-6 ">
        <div class="card">
            <div class="card-body">
                {% for pic in pictures %}
                    <img src="{{ asset(pic.path) }}" alt="logo" height="100px">
                {% endfor %}
            </div>
        </div>
        <form action="{{(path('upload_pic',{'locId':location.id}))}}" method="post" enctype="multipart/form-data">
            <label for="image_uploads" class="btn btn-info mt-4" style="color:#FFF;">Ajouter des photos</label>
            <input name="image_uploads[]" id="image_uploads" class="col-1" type="file" accept=".png,.jpg" placeholder="Ajouter des photos" style="opacity:0;" multiple ></input>
            <button id="send" class="d-none btn btn-success mt-4">Envoyer les photos</button>
        </form>
    </div>
    <div class="col-3">
        <ul class="list-info-loc">
            <li>Nom : {{location.ville}}</li>
            <li>Pays : {{location.pays}}</li>
            <li>Ville : {{location.ville}}</li>
            <li>Adresse : {{location.adresse}}</li>
            <li>Code postal : {{location.codePostal}}</li>
            <li>Esimation : {{location.estimation}}</li>
        </ul>
    </div>
    <div class="col-3 card">
        <div class="card-body">
            <h5>Note :</h5></br>
            <p> {{location.note}}</p>
        </div>
    </div>
</div>
<div class="col-12 d-flex justify-content-center mt-3">
    <button class="col-4 btn btn-danger accept" id="{{location.id}}" style="color:#fff;">Annuler</button>
</div>
{% endblock %}
{% block javascript %}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script>

$(document).ready(function() {
    $('#image_uploads').addEventListener('change', afficher_btn());
    function afficher_btn(){
        $('#send').removeClass('d-none');
    }
});

</script>
{% endblock %}